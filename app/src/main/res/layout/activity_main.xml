<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/kohliAndDhoni"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/main_team_image"/>

    <Button
        android:id="@+id/batsmenButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/batsman"
        android:padding="12dp"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="20dp"
        android:text="Batsmen"
        android:textSize="24sp"
        android:gravity="left"
        android:backgroundTint="@color/white"
        android:background="@drawable/edittext_rounder_shape"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/batsman"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/batsmenButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/batsmenButton"
        android:src="@drawable/batsmen"
        android:scaleType="centerCrop"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/allRounderButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/batsmenButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/allRounder"
        android:padding="12dp"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="20dp"
        android:text="All Rounders"
        android:textSize="24sp"
        android:gravity="left"
        android:backgroundTint="@color/white"
        android:background="@drawable/edittext_rounder_shape"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/allRounder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/allRounderButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/allRounderButton"
        android:src="@drawable/allrounder"
        android:scaleType="centerCrop"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/wicketKeeperButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/allRounderButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/wicketKeeper"
        android:padding="12dp"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="20dp"
        android:text="Wicket Keepers"
        android:textSize="24sp"
        android:gravity="left"
        android:backgroundTint="@color/white"
        android:background="@drawable/edittext_rounder_shape"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/wicketKeeper"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/wicketKeeperButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/wicketKeeperButton"
        android:src="@drawable/wicketkeeper"
        android:scaleType="centerCrop"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/bowlerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wicketKeeperButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bowler"
        android:padding="12dp"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="20dp"
        android:text="Bowlers"
        android:textSize="24sp"
        android:gravity="left"
        android:backgroundTint="@color/white"
        android:background="@drawable/edittext_rounder_shape"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/bowler"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/bowlerButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bowlerButton"
        android:src="@drawable/bowler"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>